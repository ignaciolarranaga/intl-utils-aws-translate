{
  "compilerOptions": {
    /* Projects */
    "target": "ES2020",
    "lib": ["es2020"],

    /* Modules */
    "module": "commonjs",
    "rootDir": "src",
    "resolveJsonModule": true,

    /* JavaScript Support */
    "allowJs": true,

    /* Emit */
    "outDir": "dist",
    "declaration": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,

    /* Completeness */
    "skipLibCheck": true
  },
  "exclude": ["jest.config.js", "node_modules", "dist"]
}
